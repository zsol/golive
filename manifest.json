{
  "manifest_version": 2,

  "name": "Go Live",
  "description": "Lets you stream a live video of your desktop to Facebook",
  "version": "1.0",

  "app": {
    "background": {
      "scripts": ["background.js"]
    }
  },

  "permissions": [
    "desktopCapture",
    "unlimitedStorage",
    {"socket": ["resolve-host", "tcp-connect"]}
  ],
  "sockets": {
    "tcp": {
      "connect": "*:*"
    }
  }
}
